{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C (Debug)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/Debug/outDebug.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila o arquivo C atual em modo debug"
        }
    ]
}
